{
  "name": "cypress-cucumber",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "cy:open": "cypress open",
    "cy:run": "cypress run",
    "cy:run:allure": "cypress run --env allure=true,allureClearSkipped=true,allureAddVideoOnPass=false",
    "allure:clean": "rimraf allure-results allure-report || true",
    "allure:generate": "allure generate --clean ./allure-results -o ./allure-report",
    "allure:open": "allure open ./allure-report"
  },
  "devDependencies": {
    "@badeball/cypress-cucumber-preprocessor": "^22.2.0",
    "@bahmutov/cypress-esbuild-preprocessor": "^2.2.5",
    "@shelex/cypress-allure-plugin": "^2.41.2",
    "@types/node": "^24.3.0",
    "allure-commandline": "^2.34.1",
    "allure-cypress": "^3.3.3",
    "cypress": "^14.5.4",
    "esbuild": "^0.25.9",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  },
  "cypress-cucumber-preprocessor": {
    "stepDefinitions": "cypress/e2e/step_definitions/**/*.ts",
    "filterSpecs": true,
    "omitFiltered": true
  }
}
