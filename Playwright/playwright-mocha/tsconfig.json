{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "rootDir": "./",
    "declaration": true,
    "allowJs": true,
    "checkJs": false,
    "types": ["node", "mocha", "chai"]
  },
  "ts-node": {
    "esm": false,
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
  "include": [
    "test/**/*.ts",
    "**/*.ts"
, "dist/test/test.spec.js"  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
