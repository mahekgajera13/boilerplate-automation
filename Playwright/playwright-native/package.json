{
  "name": "playwright-ts-allure-boilerplate",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "test": "rimraf allure-results && playwright test",
    "test:headed": "rimraf allure-results && playwright test --headed",
    "allure:generate": "allure generate ./allure-results --clean -o ./allure-report",
    "allure:open": "allure open ./allure-report"
  },
  "devDependencies": {
    "@playwright/test": "^1.47.0",
    "@types/node": "^24.3.0",
    "allure-commandline": "^2.29.0",
    "allure-playwright": "^2.15.0",
    "rimraf": "^6.0.1",
    "typescript": "^5.4.0"
  }
}
